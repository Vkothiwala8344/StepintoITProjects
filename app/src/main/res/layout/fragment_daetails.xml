<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/iphone"
        android:id="@+id/iv_phone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_name"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_phone"
        android:text="Phone Name : "
        android:textSize="20dp"
        android:textColor="@color/Blue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_image_links"
        android:text="Image Links : "
        android:textColor="@color/Red"
        android:textSize="15dp"
        android:layout_below="@id/tv_product_name"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tags"
        android:text="Tags : "
        android:textSize="15dp"
        android:textColor="@color/whitepure"
        android:layout_below="@id/tv_image_links"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_location"
        android:text="Location : "
        android:textSize="15dp"
        android:textColor="@color/White"
        android:layout_below="@id/tv_tags"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_telephone"
        android:text="Telephone Number : "
        android:layout_below="@id/tv_location"
        android:textColor="@color/whitepure"/>




</RelativeLayout>
</ScrollView>